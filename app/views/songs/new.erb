


  <div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <h1 class="text-center">Share a Song</h1>
    <hr>

    <form class="form-horizontal" action="/songs" method="post">

    <% if @song.errors.any? %>
      <div>
       <p class="text-center"> <strong>Some issues with your song, please fix them:</strong></p>
        <ul>
          <% @song.errors.full_messages.each do |song| %>
            <li><%= song %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
      <div class="form-group">
        <label class="col-sm-4 control-label">* Song Title:</label>
        <div class="col-sm-8">
          <input type="text" name="title" class="form-control" value="<%= @song.title %>">
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-4 control-label">* Artist:</label>
        <div class="col-sm-8">
          <input type="text" name="author" class="form-control" value="<%= @song.author %>">
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-4 control-label">URL</label>
        <div class="col-sm-8">
          <input type="text" name="url" class="form-control" value="<%= @song.url %>">
        </div>
      </div>


      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
          <button type="submit" class="btn btn-custom">SUBMIT</button>
        </div>
      </div>
    </form>
    <hr>
    <p class="text-center"><a href="/songs">Click here</a> to view all songs.</p>
  </div>
  <div class="col-md-4"></div>
</div>

